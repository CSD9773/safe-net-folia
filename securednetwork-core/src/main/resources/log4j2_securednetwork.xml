<Configuration status="WARN">
    <Appenders>
        <RollingRandomAccessFile name="file" fileName="plugins/SecuredNetwork/logs/latest.log" filePattern="plugins/SecuredNetwork/logs/%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%p] %m{nolookups} %ex%n" />
            <Policies>
                <OnStartupTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="20 MB" />
                <TimeBasedTriggeringPolicy />
            </Policies>
        </RollingRandomAccessFile>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="file" level="DEBUG"/>
        </Root>
    </Loggers>
</Configuration>